<Window x:Class="WpfOpusUdp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfOpusUdp"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Orientation="Vertical">
            <ComboBox x:Name="comboBoxIn" Margin="10"/>
            <ComboBox x:Name="comboBoxOut" Margin="10"/>
            <Button x:Name="btnStart" Click="btnStart_Click" Content="Start" Padding="10" Margin="10"/>
            <Button x:Name="btnStop" Click="btnStop_Click" Content="Stop" Padding="10" Margin="10"/>
        </StackPanel>
        
    </Grid>
</Window>
